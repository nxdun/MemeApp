@model WebApplication1.Models.Jokes

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary mb-4">Create a Joke</h1>

<div class="card bg-dark text-light shadow-lg p-4">
    <h4 class="text-accent">New Joke Details</h4>
    <hr class="text-muted" />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="jokeQ" class="form-label">Joke Question</label>
            <input asp-for="jokeQ" class="form-control bg-secondary text-light border-0" />
            <span asp-validation-for="jokeQ" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="jokeA" class="form-label">Joke Answer</label>
            <input asp-for="jokeA" class="form-control bg-secondary text-light border-0" />
            <span asp-validation-for="jokeA" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <input type="submit" value="Create" class="btn btn-primary me-2" />
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .text-accent {
        color: #03dac5;
    }

    .btn-primary:hover {
        background-color: #018786 !important;
    }
</style>
