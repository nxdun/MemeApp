@model WebApplication1.Models.Jokes

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-primary mb-4">Joke Details</h1>

<div class="card bg-dark text-light shadow-lg p-4">
    <h4 class="text-accent">Details</h4>
    <hr class="text-muted" />
    <dl class="row">
        <dt class="col-sm-3 text-accent">Question</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.jokeQ)</dd>

        <dt class="col-sm-3 text-accent">Answer</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.jokeA)</dd>
    </dl>
    <hr class="text-muted" />
    <div class="d-flex justify-content-end">
        <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>

<style>
    .text-accent {
        color: #03dac5;
    }

    .btn-warning {
        background-color: #f39c12;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e67e22;
        }

    .btn-secondary {
        background-color: #4a4a4a;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5c5c5c;
        }
</style>
